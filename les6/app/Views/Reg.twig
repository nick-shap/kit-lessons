{% extends "Base.twig" %}

{% block title %} Регистрация {% endblock %}

{% block content %}
    <h1>Регистрация</h1>

    {% if message is defined %}
        <div class="alert {{ message.type == 'error' ? 'alert-danger' : 'alert-success' }}" role="alert">
            {{ message.text }}
        </div>
    {% endif %}

    <form action="{{ appUrl }}/reg" method="post">

        <div class="form-group">
            <label for="email">Имя</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Введите имя" value="{{ data.name }}" required>
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Введите email" value="{{ data.email }}" required>
        </div>

        <div class="form-group">
            <label for="password1">Пароль</label>
            <input type="password" class="form-control" id="password1" name="password1" placeholder="Введите пароль" value="{{ data.password1 }}" required>
        </div>

        <div class="form-group">
            <label for="password2">Подтверждения пароля</label>
            <input type="password" class="form-control" id="password2" name="password2" placeholder="Введите пароль"  value="{{ data.password2 }}" required>
        </div>

        <button type="submit" class="btn btn-primary btn-block">Регистрация</button>
    </form>
{% endblock %}