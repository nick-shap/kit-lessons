{% extends "Base.twig" %}

{% block title %} Редактор статьи {% endblock %}

{% block content %}
    <h1>Редактор статьи</h1>

    {% if message is defined %}
        <div class="alert {{ message.type == 'error' ? 'alert-danger' : 'alert-success' }}" role="alert">
            {{ message.text }}
        </div>
    {% endif %}

    <form action="{{ appUrl }}/article/update" method="post">

        <div class="form-group">
            <label for="name">Название</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Название статьи" value="{{ article.name }}" required>
        </div>

        <div class="form-group">
            <label for="text">Текст</label>
            <textarea class="form-control" id="text" name="text" placeholder="Название статьи" required>{{ article.text }}</textarea>
        </div>

        <input type="hidden" name="id" value="{{ article.id }}">
        <input type="hidden" name="user_id" value="{{ article.user_id }}">

        <button type="submit" class="btn btn-primary btn-block">Сохранить</button>
    </form>
{% endblock %}