{% extends "Base.twig" %}

{% block title %} Новая статья {% endblock %}

{% block content %}
    <h1>Новая статья</h1>

    {% if message is defined %}
        <div class="alert {{ message.type == 'error' ? 'alert-danger' : 'alert-success' }}" role="alert">
            {{ message.text }}
        </div>
    {% endif %}

    <form action="{{ appUrl }}/article/create" method="post">

        <div class="form-group">
            <label for="name">Название</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Название статьи" value="{{ article.name }}" required>
        </div>

        <div class="form-group">
            <label for="text">Текст</label>
            <textarea class="form-control" id="text" name="text" placeholder="Название статьи" required>{{ article.text }}</textarea>
        </div>

        <button type="submit" class="btn btn-primary btn-block">Добавить</button>
    </form>
{% endblock %}